{
  "name": "@care-monitoring/ward-app",
  "version": "0.1.0",
  "description": "Mobile app for wards in Care Monitoring System",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:android": "npx @react-native-community/cli bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && gradlew.bat assembleRelease",
    "build:android:debug": "npx @react-native-community/cli bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && gradlew.bat assembleDebug",
    "build:android:bundle": "cd android && gradlew.bat bundleRelease",
    "build:ios": "cd ios && pod install && echo 'Open ios/CareMonitoringWard.xcworkspace in Xcode to build'",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && rm -rf build && rm -rf Pods && rm -rf Podfile.lock"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@react-native-community/geolocation": "^3.2.1",
    "@react-native-community/netinfo": "^11.1.0",
    "@react-native-community/push-notification-ios": "^1.11.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "date-fns": "^3.0.6",
    "react": "18.3.1",
    "react-native": "0.72.6",
    "react-native-ble-plx": "^3.1.1",
    "react-native-chart-kit": "^6.12.0",
    "react-native-gesture-handler": "2.12.1",
    "react-native-image-picker": "^7.0.0",
    "react-native-maps": "1.10.0",
    "react-native-permissions": "^4.0.3",
    "react-native-push-notification": "^8.1.1",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "3.22.0",
    "react-native-svg": "^14.0.0",
    "react-native-vector-icons": "^10.0.3",
    "react-redux": "^9.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/runtime": "^7.23.5",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.2",
    "@types/react": "^18.3.0",
    "@types/react-native": "^0.72.8",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.76.8",
    "prettier": "^3.1.1",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-test-renderer": "18.3.1"
  }
}
